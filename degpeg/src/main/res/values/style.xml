<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextViewStyleBase">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="TextViewStyleRegular" parent="TextViewStyleBase">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="TextViewStyleMedium" parent="TextViewStyleBase">
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextViewStyleSemiBold" parent="TextViewStyleBase">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="TextViewStyleBold" parent="TextViewStyleBase">
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextViewStyleExtraBold" parent="TextViewStyleBase">
        <item name="android:fontFamily">@font/nunito_extra_bold</item>
    </style>

    <style name="EditTextStyle" parent="TextViewStyleBase">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:theme">@style/EditTextTheme</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorControlNormal">@color/textColorSecondary</item>
        <item name="colorControlActivated">@color/textColorSecondary</item>
        <item name="colorControlHighlight">@color/textColorSecondary</item>
    </style>


    <style name="ButtonStyle">
        <!--        <item name="android:textColor">@color/white</item>-->
        <item name="android:textSize">@dimen/_13ssp</item>
        <!--        <item name="android:background">@drawable/button_bg</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ButtonBlackStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_black_rounded</item>
    </style>

    <style name="BottomMenu" parent="Widget.Material3.BottomNavigationView">
        <item name="android:backgroundTint">@color/background</item>
        <item name="elevation">@dimen/_5sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="itemIconTint">@color/nav_indicator_icon_tint</item>
        <item name="itemTextColor">@color/nav_indicator_text_color</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>

    <style name="BottomNavigationViewTextStyleSelected">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="BottomNavigationViewTextStyle">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/theme_selected</item>
    </style>

    <style name="selectableItemBackgroundBorderless">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="colorPrimary">@color/background</item>
        <item name="colorSurface">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="backgroundTint">@color/background</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="shapeAppearanceOverlay">@style/BottomSheetShapeAppearance</item>
    </style>

    <style name="BottomSheetShapeAppearance" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSizeTopRight">@dimen/_8sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_8sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>