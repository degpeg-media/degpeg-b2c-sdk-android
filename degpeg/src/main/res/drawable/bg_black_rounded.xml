<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/black_alpha_20">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/material_on_background_disabled" />
                    <corners android:radius="@dimen/_50sdp" />
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/theme_selected" />
                    <corners android:radius="@dimen/_50sdp" />
                </shape>
            </item>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/theme_selected" />
                    <corners android:radius="@dimen/_50sdp" />
                </shape>
            </item>
            <item android:state_hovered="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/theme_selected" />
                    <corners android:radius="@dimen/_50sdp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/black_alpha_80" />
                    <corners android:radius="@dimen/_50sdp" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>