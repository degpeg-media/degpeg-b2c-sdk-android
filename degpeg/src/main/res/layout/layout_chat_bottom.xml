<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginEnd="@dimen/_10sdp"
    android:orientation="horizontal">

    <com.degpeg.views.EditText
        android:id="@+id/edtMessage"
        style="@style/EditTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_weight="1"
        android:background="@drawable/underline_white"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/nunito_bold"
        android:hint="@string/post_a_comment"
        android:inputType="textMultiLine|textCapSentences"
        android:maxLines="3"
        android:minHeight="@dimen/_30sdp"
        android:paddingStart="@dimen/_3sdp"
        android:paddingEnd="@dimen/_3sdp"
        android:textColor="@color/textColorWhite"
        android:textColorHint="@color/lightest_gray" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnSend"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:background="@drawable/ic_send"
        android:stateListAnimator="@animator/selector_animator"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lyItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/btnLike"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/like_chk_selector"
            android:button="@null"
            android:stateListAnimator="@animator/selector_animator" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnProductToggle"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:background="@drawable/ic_bag_multi"
            android:stateListAnimator="@animator/selector_animator" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnShare"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:background="@drawable/ic_share"
            android:stateListAnimator="@animator/selector_animator" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnMute"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:background="@drawable/ic_unmute"
            android:stateListAnimator="@animator/selector_animator" />
    </LinearLayout>
</LinearLayout>
