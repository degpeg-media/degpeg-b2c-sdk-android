<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_160sdp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp">

    <com.degpeg.views.TextView
        android:id="@+id/txtDate"
        style="@style/TextViewStyleBase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        app:drawableTint="@color/black"
        android:drawableStart="@drawable/ic_event_calender"
        android:drawablePadding="@dimen/_3sdp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:text="Aug 22, Friday @ 12 : 15 AM"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintEnd_toEndOf="@id/image"
        app:layout_constraintStart_toStartOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent" />

    <com.degpeg.views.CircularImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:foreground="?selectableItemBackground"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_show1"
        android:stateListAnimator="@animator/selector_animator_less2"
        app:layout_constraintDimensionRatio="4:2.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDate"
        app:riv_corner_radius="@dimen/_5sdp"
        tools:ignore="UnusedAttribute" />

    <com.degpeg.views.TextView
        android:id="@+id/txtName"
        style="@style/TextViewStyleBase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/nunito_semi_bold"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_5sdp"
        android:text="Life Style"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintEnd_toEndOf="@id/image"
        app:layout_constraintStart_toStartOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@id/image" />
</androidx.constraintlayout.widget.ConstraintLayout>